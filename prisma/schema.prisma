datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Tutor {
  id       String @id @default(cuid())
  email    String @unique
  password String
  tipo     String

  nome String?

  pets Pet[]

  endereco   Endereco? @relation(fields: [enderecoId], references: [id])
  enderecoId Int?

  @@map("tutores")
}

model Pet {
  id      String  @id @default(cuid())
  Tutor   Tutor?  @relation(fields: [tutorId], references: [id])
  tutorId String?

  nome    String?
  idade   Int?
  raca    String?
  especie String?

  vacinas Vacina[]

  @@map("pets")
}

model Vacina {
  id    String  @id @default(cuid())
  Pet   Pet?    @relation(fields: [petId], references: [id])
  petId String?

  @@map("vacinas")
}

model Petshop {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  tipo     String
  nome     String?

  endereco   Endereco? @relation(fields: [enderecoId], references: [id])
  enderecoId Int?

  @@map("petshops")
}

model Veterinario {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  tipo     String
  nome     String?

  endereco   Endereco? @relation(fields: [enderecoId], references: [id])
  enderecoId Int?

  @@map("veterinarios")
}

model Endereco {
  id          Int           @id @default(autoincrement())
  cep         String
  logradouro  String
  complemento String?
  bairro      String
  localidade  String
  uf          String
  Veterinario Veterinario[]
  Tutor       Tutor[]
  Petshop     Petshop[]
}
